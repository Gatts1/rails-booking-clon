<h2><%= @room.name %></h2>
<div>
  <h4>Hotel: <%= @room.hotel.name %></h4>
  <p>Price: <%= @room.price %></p>
  <p>Num of beds: <%= @room.amount_of_beds %></p>
  <% if @room.image.attached? %>
    <%= image_tag @room.image.variant(resize: "400x400") %>
  <% end %>
  <% if @room.gallery.attached? %>
    <p>Gallery:</p>
    <div class="gallery">
      <% @room.gallery.each do |image| %>
        <%= image_tag image.variant(resize: "300x300") %>
      <% end %>
    </div>
  <% end %>
  <%= link_to "Reserve", reserve_path(room_id: @room.id) %>
</div>
